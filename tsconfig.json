{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext", 
    "declaration": true,
    "outDir": "dist",
    "moduleResolution": "Node",
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["**/*.vue", "src/vue/**/*", "src/vue.ts"]
}
